<Window x:Class="ha_sus_ck_sex.UserInputSpeechBubble"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ha_sus_ck_sex"
        mc:Ignorable="d"
        Title="SpeechBubble" Height="400" Width="400"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None">
    <Grid>
        <Image Source="/Resources/speech-bubble-inv.png"></Image>
        <ScrollViewer Width="230" Height="130" VerticalScrollBarVisibility="Auto" Margin="25,0,0,10">
            <TextBox Name="ChatBox"
           Text=""
           FontSize="14" Foreground="Black" 
           HorizontalAlignment="Left" VerticalAlignment="Top"
           Padding="10"
           TextWrapping="Wrap" Width="230"
           FontFamily="Arial"
           MinHeight="130"/>
        </ScrollViewer>
    </Grid>
</Window>
